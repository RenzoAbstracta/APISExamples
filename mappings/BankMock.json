{
  "request": {
    "method": "POST",
    "url": "/payment",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.account"
      },
      {
        "matchesJsonPath": "$.amount"
      }
    ]
  },
  "response": {
    "status": 201,
    "jsonBody": {
      "payId": "{{randomInt lower=1000 upper=999999}}",
      "amount": "{{jsonPath request.body '$.amount'}}",
      "account": "{{jsonPath request.body '$.account'}}"
    },
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
